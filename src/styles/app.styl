$darkBlue = #1f1d25
$offwhite = #d3c7bf
$redish = #d16058
body
  background: #fefefe // lighten($darkBlue, 1%)
  font-family: "Source Sans Pro"
  color: $offwhite
  font-weight: 300
h2
  font-weight: 300
  color: #eee
  float: leftph
  margin: 12px 0px
.container
  position: realative;
.main

  margin: 50px 0 0 0
.intro, .error
  position: absolute
  top: 10px
  left: 0
  right: 0
  text-align: center
  line-height: 40px
.error
  color: $redish
.start
  color: #328188
  font-weight: 400
.hidden
  display: none;
.sliders
  float: right
.slider
  display: inline-block;
  padding: 0 0 0 20px
  .value
    width: 20px
    font-weight: 400
    vertical-align: middle
  .label
    vertical-align: middle
  li
    line-height: 24px
    display: inline-block
  input[type=range]
    vertical-align: middle
    margin: 0 10px
    -webkit-appearance: none
    background-color: $offwhite
    height: 3px
    width: 100px
    outline: none
  input[type="range"]::-webkit-slider-thumb
    -webkit-appearance: none
    background-color: $offwhite
    width: 10px
    height: 20px
    border: 1px solid lighten($darkBlue, 1%)
    &:hover
      cursor: pointer
